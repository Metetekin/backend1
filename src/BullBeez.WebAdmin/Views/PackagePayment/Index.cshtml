@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="modal fade bs-modal-lg" tabindex="-1" role="dialog" id="mymodal">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Paket Ödemesi ekle</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="card-body">
                    <form class="form-horizontal form-material mx-2" id="frmModal">
                        <input type="hidden" name="Id" id="Id">
                        <div class="form-group">
                            <label class="col-md-12">Text</label>
                            <div class="col-md-12">
                                <select class="form-select shadow-none form-control-line" name="PackageId" id="PackageId">
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-12">Kullanıcı</label>
                            <div class="col-md-12">
                                <select class="form-select shadow-none form-control-line" name="CompanyAndPersonId" id="CompanyAndPersonId">
                                </select>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" onclick="SaveData()" class="btn btn-primary">Kaydet</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card" style="padding:20px;">
            <div class="card-body">
                <!-- title -->
                <div class="d-md-flex">
                    <div class="ms-auto">
                        <div class="dl">
                            <button onclick="AddData()" class="btn btn-success text-white">Ekle</button>
                        </div>
                    </div>
                </div>
                <!-- title -->
            </div>
            <div class="table-responsive" style="min-width:90%">
                <table class="table table-striped table-bordered dt-responsive nowrap dataTable no-footer dtr-inline collapsed" id="setupList">
                    <thead>
                        <tr>
                            <th scope="col">Adı/Unvanı</th>
                            <th scope="col">Tutar</th>
                            <th scope="col">Email</th>
                            <th scope="col">Paket Adı</th>
                            <th scope="col">İşlem Tarihi</th>
                            <th scope="col">Durumu</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script>
        $(document).ready(function () {
            LoadDataSource();
        });
        function LoadDataSource() {
            $('#setupList').DataTable({
                "destroy": true,
                "processing": true,
                "serverSide": true,
                "info": true,
                "filter": false,
                "searching": true,
                "language": {
                    "url":  "@string.Format("{0}://{1}{2}", Request.Url.Scheme, Request.Url.Authority, Url.Content("~"))/assets/dist/js/datatableTR.js"
                },
                "ajax": {
                    "url": "/PackagePayment/GetPackagePaymentList",
                    "type": "POST",
                    //"data": {
                    //    "errorType": $('#ErrorType').val()
                    //}
                },
                "columns": [
                    { "data": "NameOrTitle", "orderable": false },
                    { "data": "Amount", "orderable": false },
                    { "data": "EmailAddress", "orderable": false },
                    { "data": "PackageName", "orderable": false },
                    { "data": "Inserteddate", "orderable": false },
                    { "data": "IsPayment", "orderable": false }
                ]
            });
        }
        function ShowData(id)
        {
            Form.Reset('frmModal');
            $.ajax({
                url: "/PackagePayment/GetServicePaymentById",
                type: "Post",
                    data: {
                        Id: id,
                    }
            }).done(function (response) {
                    $('#tblQestions').html('');
                    var $html = '';
                    $.each(response, function (index, item) {
                        $html += '<tr><td>' + item.NameOrTitle + '</td><td>' + item.Question + '</td>' +
                            '<td>' + item.Option + '</td></tr>';
                    });
                    $html += '<tr><td>' + response[0].NameOrTitle + '</td><td>Text Cevap</td>' +
                        '<td>' + response[0].TextCevap + '</td></tr>';
                    $('#tblQestions').append($html);
                    $('#mymodal').modal('show');
            });
        }



        function AddData() {
            Form.Reset('frmModal');
            SetUsers();
            SetPackage();
            
            $('#mymodal').modal('show');
        }

        function SetUsers()
        {
            $.ajax({
                url: "/Users/GetUsersList",
                type: "Post"
            }).done(function (response) {

                var $ddlHtml = '';
                $.each(response, function (i, item) {

                    $ddlHtml += '<option value="' + item.Id + '">' + item.NameOrTitle + '</option>';
                });
                $('#CompanyAndPersonId').append($ddlHtml);

            });
        }

        function SetPackage() {
            $.ajax({
                url: "/Package/GetPackageListSelect",
                type: "Post"
            }).done(function (response) {

                var $ddlHtml = '';
                $.each(response, function (i, item) {

                    $ddlHtml += '<option value="' + item.Id + '">' + item.UniqCodeAndroid + '</option>';
                });
                $('#PackageId').append($ddlHtml);

            });
        }

        function SaveData() {
            var form = $("#frmModal");
            var param = form.serializeArray();
            debugger;
            $.ajax({
                url: "/PackagePayment/InsertPackagePayment",
                type: "Post",
                data: param
            }).done(function (response) {
                $('#mymodal').modal('hide');
                LoadDataSource();
            });

        }


    </script>
}