
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="modal fade bs-modal-lg" tabindex="-1" role="dialog" id="mymodal">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Kullanıcı Bilgileri</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="card-body">
                    <form class="form-horizontal form-material mx-2" id="frmUser">
                        <input type="hidden" name="Id" id="Id">
                        <div class="form-group">
                            <label class="col-md-12">İsim/Unvan</label>
                            <div class="col-md-12">
                                <input type="text" name="NameOrTitle" id="NameOrTitle" placeholder="Johnathan Doe" class="form-control form-control-line">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="example-email" class="col-md-12">Kullanıcı Adı</label>
                            <div class="col-md-12">
                                <input type="text" name="UserName" id="UserName" class="form-control form-control-line">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-12">E-Posta</label>
                            <div class="col-md-12">
                                <input type="email" name="EmailAddress" id="EmailAddress" value="password" class="form-control form-control-line">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-12">Telefon</label>
                            <div class="col-md-12">
                                <input type="text" name="GSM" id="GSM" class="form-control form-control-line">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-12">Bullbeez Cümlesi</label>
                            <div class="col-md-12">
                                <textarea rows="5" name="BullbeezSentence" id="BullbeezSentence" class="form-control form-control-line"></textarea>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary">Kaydet</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card" style="padding:20px;">

            <div class="table-responsive" style="min-width:90%">
                <table class="table table-striped table-bordered dt-responsive nowrap dataTable no-footer dtr-inline collapsed" id="setupList">
                    <thead>
                        <tr>
                            <th scope="col">İsim/Unvan</th>
                            <th scope="col">Kullanıcı Adı</th>
                            <th scope="col">Email</th>
                            <th scope="col">Telefon</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script>
        $(document).ready(function () {
            LoadDataSource();

        });

        function LoadDataSource() {

            $('#setupList').DataTable({
                "destroy": true,
                "processing": true,
                "serverSide": true,
                "info": true,
                "filter": false,
                "searching": true,
                "language": {
                    "url":  "@string.Format("{0}://{1}{2}", Request.Url.Scheme, Request.Url.Authority, Url.Content("~"))/assets/dist/js/datatableTR.js"

                },
                "ajax": {
                    "url": "/Users/GetUsers",
                    "type": "POST",
                    //"data": {
                    //    "errorType": $('#ErrorType').val()
                    //}
                },
                "columns": [
                    { "data": "NameOrTitle" },
                    { "data": "UserName" },
                    { "data": "EmailAddress" },
                    { "data": "GSM" },
                    {
                        "data": "Id",
                        "orderable": false,
                        "render": function (data, type, row, meta) {
                            var a = '<button onclick="ShowUser(' + row.Id + ')" class="btn btn-success text-white">Update Profile</button>'

                            return a;
                        }
                    }

                ]
            });
        }

        function ShowUser(id)
        {
            Form.Reset('frmUser');
            $.ajax({
                url: "/Users/GetUserById",
                type: "Post",
                    data: {
                        userId: id,
                    }
                }).done(function (response) {
                    Form.SetData('frmUser', response);
                    $('#mymodal').modal('show');
            });

        }

    </script>
}


